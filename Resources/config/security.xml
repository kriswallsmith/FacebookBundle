<?xml version="1.0" ?>

<container xmlns="http://www.symfony-project.org/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.symfony-project.org/schema/dic/services http://www.symfony-project.org/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="fos_facebook.security.authentication.entry_point.class">Bundle\FOS\FacebookBundle\Security\EntryPoint\FacebookAuthenticationEntryPoint</parameter>
        <parameter key="fos_facebook.security.authentication.listener.class">Bundle\FOS\FacebookBundle\Security\Firewall\FacebookListener</parameter>
        <parameter key="fos_facebook.security.authentication.provider.class">Bundle\FOS\FacebookBundle\Security\Provider\FacebookProvider</parameter>
    </parameters>

    <services>
        
        <service id="fos_facebook.security.authentication.entry_point" class="%fos_facebook.security.authentication.entry_point.class%" public="false">
            <argument type="service" id="fos_facebook.api" />
            <argument type="collection">
                <argument key="cancel_url">%fos_facebook.login_url.cancel_url%</argument>
                <argument key="canvas">%fos_facebook.login_url.canvas%</argument>
                <argument key="display">%fos_facebook.login_url.display%</argument>
                <argument key="fbconnect">%fos_facebook.login_url.fbconnect%</argument>
                <argument key="next">%fos_facebook.login_url.next%</argument>
                <argument key="req_perms">%fos_facebook.permissions%</argument>
            </argument>
        </service>
        
        <service id="fos_facebook.auth" class="%fos_facebook.security.authentication.provider.class%" public="false">
            <argument type="service" id="fos_facebook.api" />
        </service>
        
    </services>
</container>
